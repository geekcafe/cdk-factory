{
  "auto_scaling": {
    "name": "minimal-asg",
    "vpc_id": "${VPC_ID}",
    "instance_type": "t3.micro",
    "min_capacity": 1,
    "max_capacity": 3,
    "desired_capacity": 1,
    "subnet_group_name": "private",
    "security_group_ids": ["${SECURITY_GROUP_ID}"],
    "health_check_type": "EC2",
    "managed_policies": [
      "AmazonSSMManagedInstanceCore"
    ],
    "ami_type": "amazon-linux-2023",
    "block_devices": [
      {
        "device_name": "/dev/xvda",
        "volume_size": 8,
        "volume_type": "gp3"
      }
    ]
  }
}
